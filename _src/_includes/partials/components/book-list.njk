<ul id="bookList">
  {% for book in notionBooks.json.results %}
  <li class="book">
    <div class="bookImageContainer">
      <a href="{{ book.properties.bookBuyUrl.url }}">
        <picture>
          <img
            class="bookImage"
            src="{{ book.properties.bookImage.url }}"
            alt="The book cover for {{ book.properties.bookTitle.rich_text[0].text.content }}"
            loading="lazy"
            height="220"
          />
        </picture>
      </a>
    </div>
    <div class="bookInfo">
      <h4 class="bookTitle">
        {{ book.properties.bookTitle.rich_text[0].text.content }}
      </h4>
      {% if book.subTitle %}
      <p class="bookSubTitle">
        {{ book.properties.subTitle.rich_text[0].text.content }}
      </p>
      {% endif %}
      <p class="bookAuthor">
        <em>{{book.properties.bookAuthor.rich_text[0].text.content}}</em>
      </p>
      <p class="bookDate">
        {% if book.properties["Status"].checkbox == false %}
          <span style="color: var(--pink);font-weight:bold">Currently Reading</span>
        {% else %}
          Finished: {{book.properties.dateRead.date.start | fixDate }}
        {% endif %}
      </p>
    </div>
  </li>
  {% endfor %}
</ul>
